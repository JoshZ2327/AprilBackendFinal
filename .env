# Solana RPC Configuration
RPC_URL=https://api.mainnet-beta.solana.com     # Solana RPC endpoint

# Jupiter Aggregator API
JUPITER_API=https://quote-api.jup.ag/v4/quote  # Jupiter API for token price and trade routing

# Trading Configuration
DEFAULT_GAS_RESERVE=0.01                       # SOL reserve for gas fees (default: 0.01 SOL)
STOP_LOSS_PERCENTAGE=0.01                      # Stop-loss percentage (default: 1%)
TRADE_AMOUNT_PERCENTAGE=5                      # Percentage of portfolio allocated per trade (default: 5%)

# Notifications Configuration
NOTIFICATIONS_ENABLED=true                     # Enable notifications (true/false)
NOTIFICATIONS_METHOD=both                      # Options: email, sms, both
NOTIFICATIONS_EMAIL=your_email@example.com     # Email for notifications (optional)
NOTIFICATIONS_PHONE=+1234567890                # Phone number for SMS notifications (optional)

# API Keys (Optional for Authentication or External Services)
API_KEY=your_api_key_here                      # Replace with an API key if required

# Environment Metadata
ENVIRONMENT=production                         # Options: development, staging, production
LOG_LEVEL=info                                 # Log level (options: debug, info, warn, error)
